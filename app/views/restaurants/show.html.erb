<div class="container">
  <h1><%= @restaurant.name %></h1>


  <p style="color: green"><%= notice %></p>

      <p>
          <strong>Name:</strong>
          <%= @restaurant.name %>
      </p>

      <p>
          <strong>Address:</strong>
          <%= @restaurant.address %>
      </p>

      <p>
          <strong>Contact details:</strong>
          <%= @restaurant.phone_number %>
      </p>

      <p>
          <strong>Category:</strong>
          <%= @restaurant.category %>
      </p> 

  <%= link_to "Leave us a Review", new_restaurant_review_path(@restaurant) %>
  <br>
  <br>
  <h2>Reviews</h2>

  <ul>
    <% if @reviews.present? %>
      <% @reviews.each do |review| %>
        <li>
          <strong>Rating:</strong> <%= review.rating %><br>
          <strong>Content:</strong> <%= review.content %><br>
        </li>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "Back to restaurants", restaurants_path %>
  <br>
</div>
